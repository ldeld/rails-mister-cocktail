<%= link_to "go back to coctails", cocktails_path %>

<h2><%= @cocktail.name %></h2>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <h3> <%= dose.ingredient.name %> </h3>
      <p> <%= dose.description %> </p> <%= link_to "delete this dose", cocktail_dose_path(@cocktail, dose), class: "btn btn-primary", method: :delete, data: { confirm: "Are you sure you want to delete this dose?"} %>
    </li>
  <% end %>
</ul>
<%= link_to "add new dose", new_cocktail_dose_path(@cocktail) %>
